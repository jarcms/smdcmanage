.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}

/* 登录头部 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.logo-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 80rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 登录内容 */
.login-content {
  width: 100%;
  margin-bottom: 80rpx;
}

.login-tips {
  text-align: center;
  margin-bottom: 40rpx;
  font-size: 28rpx;
  color: #666;
}

.btn-login {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #FF6B6B;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 30rpx;
}

.btn-login:active {
  background-color: #FF5252;
}

.btn-test {
  background-color: #4CAF50;
}

.btn-test:active {
  background-color: #388E3C;
}

/* 已登录状态 */
.logged-in {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #666;
}

.btn-logout {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.btn-logout:active {
  background-color: #e0e0e0;
}

/* 登录底部 */
.login-footer {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 40rpx;
} 