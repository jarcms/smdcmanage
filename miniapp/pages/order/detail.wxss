.container {
  padding-bottom: 120rpx;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 桌台号大字体显示 */
.table-no-section {
  text-align: center;
  padding: 30rpx 24rpx;
  background-color: #FFF5F5;
  border: 1rpx solid #FFDBDB;
}

.table-no-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.table-no-value {
  font-size: 60rpx;
  font-weight: bold;
  color: #FF6B6B;
}

/* 订单状态 */
.status-section {
  display: flex;
  align-items: center;
  padding: 30rpx 24rpx;
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.status-icon.completed {
  background-color: #4CD964;
}

.status-icon.cancelled {
  background-color: #999;
}

.status-icon.pending {
  background-color: #FF9500;
}

.status-info {
  flex: 1;
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 26rpx;
  color: #666;
}

/* 餐厅信息 */
.restaurant-section {
  padding: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.restaurant-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.restaurant-address {
  font-size: 26rpx;
  color: #666;
}

/* 订单信息 */
.order-info-section {
  padding: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

/* 桌台号样式 */
.info-item.table-info {
  margin-bottom: 16rpx;
}

.info-value.table-no {
  font-weight: bold;
  color: #FF6B6B;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  text-align: right;
}

/* 菜品信息 */
.food-section {
  padding: 24rpx;
}

.food-list {
  margin-bottom: 20rpx;
}

.food-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.food-name {
  flex: 1;
  font-size: 28rpx;
}

.food-quantity {
  font-size: 26rpx;
  color: #666;
  margin: 0 20rpx;
}

.food-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

.fee-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.fee-label {
  font-size: 26rpx;
  color: #666;
}

.fee-value {
  font-size: 26rpx;
  color: #333;
}

.total-item {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.total-label {
  font-size: 28rpx;
  font-weight: bold;
}

.total-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B6B;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-cancel, .btn-pay {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  padding: 0 40rpx;
  border-radius: 40rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  flex: 1;
  margin-right: 20rpx;
}

.btn-pay {
  background-color: #FF6B6B;
  color: #fff;
  flex: 2;
}

/* 加载中和空状态 */
.loading-container, .empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading, .empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 取餐提示 */
.pickup-section {
  padding: 24rpx;
}

.pickup-info {
  display: flex;
  align-items: center;
  background-color: #FFF5F5;
  padding: 20rpx;
  border-radius: 8rpx;
}

.pickup-icon {
  margin-right: 16rpx;
}

.pickup-text {
  font-size: 28rpx;
  color: #FF6B6B;
} 