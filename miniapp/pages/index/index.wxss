/* 餐厅详情 */
.restaurant-detail {
  padding: 20rpx;
  background-color: #fff;
}

.restaurant-banner {
  height: 300rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden; /* 确保图片不会溢出容器 */
}

.restaurant-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 确保图片填充整个容器 */
}

.restaurant-icon {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 桌台号显示样式 */
.table-info {
  background-color: #FFF5F5;
  border-radius: 12rpx;
  padding: 15rpx 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #FFDBDB;
}

.table-number {
  display: flex;
  align-items: center;
}

.table-number icon {
  margin-right: 10rpx;
}

.table-number text {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.restaurant-header {
  margin-bottom: 30rpx;
}

.restaurant-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.restaurant-rating {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.rating-score {
  color: #FF6B6B;
  font-weight: bold;
  margin-right: 10rpx;
}

.rating-count {
  color: #999;
  font-size: 24rpx;
}

.restaurant-price {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.restaurant-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.restaurant-promotion {
  margin-bottom: 15rpx;
}

.promotion-text {
  font-size: 24rpx;
  color: #FF6B6B;
  border: 1rpx solid #FF6B6B;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}

/* 餐厅详细信息 */
.info-section {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  padding: 25rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-icon {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.info-text {
  font-size: 28rpx;
  color: #333;
}

.info-arrow {
  display: flex;
  align-items: center;
}

/* 餐厅描述 */
.description-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 180rpx; /* 增加底部外边距，为底部按钮留出更多空间 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.description-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部固定按钮 */
.order-button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx 40rpx; /* 增加内边距 */
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  display: flex;
  justify-content: center; /* 居中显示 */
  width: 100%; /* 确保容器宽度为100% */
  box-sizing: border-box; /* 确保内边距不会增加容器宽度 */
}

.order-button {
  background-color: #FF6B6B;
  color: #fff;
  font-size: 36rpx; /* 增大字体 */
  font-weight: bold;
  border-radius: 50rpx;
  height: 100rpx; /* 增加高度 */
  line-height: 100rpx; /* 调整行高与高度一致 */
  width: 100%; /* 按钮宽度设为100% */
  margin: 0; /* 移除默认外边距 */
  letter-spacing: 4rpx; /* 增加字间距 */
  box-shadow: 0 4rpx 10rpx rgba(255, 107, 107, 0.3); /* 添加阴影效果 */
  box-sizing: border-box; /* 确保内边距不会增加按钮宽度 */
}

.test-button {
  display: none; /* 隐藏测试按钮 */
}

.order-button::after, .test-button::after {
  border: none;
}

/* 加载中和空状态 */
.loading-container, .empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading, .empty-text {
  font-size: 28rpx;
  color: #999;
} 