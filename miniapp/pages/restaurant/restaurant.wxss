.container {
  padding-bottom: 120rpx;
}

/* 餐厅图标 */
.restaurant-banner {
  width: 100%;
  height: 300rpx;
  background-color: #FF6B6B;
  display: flex;
  justify-content: center;
  align-items: center;
}

.restaurant-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #fff;
  border-radius: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 餐厅基本信息 */
.restaurant-info {
  padding: 30rpx;
  margin-top: -20rpx;
  border-radius: 20rpx 20rpx 12rpx 12rpx;
  z-index: 10;
  position: relative;
}

.restaurant-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.restaurant-rating {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.rating-score {
  color: #FF6B6B;
  font-weight: bold;
  margin-right: 10rpx;
}

.rating-count {
  color: #999;
  font-size: 24rpx;
}

.restaurant-price {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.restaurant-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.tag {
  font-size: 22rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.restaurant-promotion {
  margin-bottom: 10rpx;
}

.promotion-text {
  font-size: 22rpx;
  color: #FF6B6B;
  border: 1rpx solid #FF6B6B;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

/* 餐厅联系方式 */
.restaurant-contact {
  margin-top: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  margin-right: 20rpx;
}

.contact-info {
  flex: 1;
}

.contact-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
}

.contact-arrow {
  margin-left: 20rpx;
}

/* 餐厅地图 */
.restaurant-map {
  margin-top: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.map {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
}

/* 餐厅介绍 */
.restaurant-description {
  margin-top: 20rpx;
}

.description-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-order {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #FF6B6B;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
}

.btn-order:active {
  background-color: #FF5252;
}

/* 加载中和空状态 */
.loading-container, .empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading, .empty-text {
  font-size: 28rpx;
  color: #999;
} 