.container {
  padding-bottom: 120rpx;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 订单信息 */
.order-info {
  margin-bottom: 20rpx;
}

.order-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

/* 桌台号样式 */
.order-item.table-info {
  padding: 20rpx 0;
}

.order-item.table-info.warning {
  background-color: #FFF8E1;
  border-radius: 8rpx;
  padding: 20rpx 10rpx;
  margin: 10rpx 0;
}

.order-item.table-info.optional {
  background-color: #F9F9F9;
  border-radius: 8rpx;
  padding: 20rpx 10rpx;
  margin: 10rpx 0;
}

.item-value.table-no {
  font-weight: bold;
  color: #FF6B6B;
}

.item-value.table-no.warning {
  color: #FF9800;
}

.item-value.table-no.optional {
  color: #999;
  font-weight: normal;
}

.item-label {
  font-size: 28rpx;
  color: #666;
}

.item-value {
  font-size: 28rpx;
  color: #333;
}

.item-value.price {
  color: #FF6B6B;
  font-weight: bold;
}

/* 支付方式 */
.payment-methods {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.payment-method {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.payment-method:last-child {
  border-bottom: none;
}

.payment-method.active {
  background-color: #f8f8f8;
}

.method-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.method-icon.wxpay {
  background-image: url('data:image/svg+xml;base64,');
}

.method-icon.alipay {
  background-image: url('data:image/svg+xml;base64,');
}

.method-name {
  flex: 1;
  font-size: 28rpx;
}

.method-check {
  margin-right: 10rpx;
}

/* 底部支付按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  padding: 0 30rpx;
}

.total-price {
  flex: 1;
  font-size: 28rpx;
}

.price {
  color: #FF6B6B;
  font-weight: bold;
  font-size: 32rpx;
}

.action-buttons {
  display: flex;
}

.btn-cancel, .btn-pay {
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding: 0;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-pay {
  background-color: #FF6B6B;
  color: #fff;
}

.btn-pay:active {
  background-color: #FF5252;
}

/* 加载中和空状态 */
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 